<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="icon" href="/images/titlelogo.png" type="image/icon type" />
    <link href="http://fonts.cdnfonts.com/css/better-grade" rel="stylesheet" />

    <title>Members</title>
  </head>
  <body>
    <header class="members_header">
      <%- include('../partials/adminNav.ejs')%>

      <div class="member_content">
        <div class="member_content-filter">
          <span>Filter by name:</span>
          <input type="text" class="search" onkeyup="searchFilter()" />
        </div>
        <div class="member_content-name">
          <div class="name-top">
            <span><%= members.length %> Total Members</span>
            <a class="button" id="add">Add Member</a>
          </div>
          <div class="name-list">
            <table class="members-list">
              <tbody>
                <!-- <tr>
                  <td>
                    <div class="member-name">
                      <a href="">Austen kate</a>
                    </div>
                    <div class="delete-icon">
                      <img src="../images/delete.png" alt="" />
                    </div>
                  </td>
                </tr>
                <tr>
                  <td>
                    <div class="member-name">
                      <a href="">Stark Tony</a>
                    </div>
                    <div class="delete-icon">
                      <img src="../images/delete.png" alt="" />
                    </div>
                  </td>
                </tr> -->

                <% members.forEach(member => { %>
                <tr>
                  <td>
                    <div class="member-name">
                      <a href="members/<%= member.id %>"
                        ><%= member.firstname %> <%= member.lastname %></a
                      >
                    </div>
                    <div class="delete-icon">
                      <img src="../images/delete.png" alt="" />
                    </div>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="modal-form">
        <div class="modal-form-content">
          <span>Add New Member</span>

          <i class="fas fa-times close"></i>

          <form action="/admin/members" method="POST">
            <div class="form-group">
              <label for="">Firstname</label>
              <input
                type="text"
                name="firstname"
                id=""
                placeholder="Firstname"
                required
              />
            </div>

            <div class="form-group">
              <label for="">Lastname</label>
              <input
                type="text"
                name="lastname"
                id=""
                placeholder="Lastname"
                required
              />
            </div>

            <div class="form-group">
              <label for="">Baptized Date (Optional)</label>
              <input type="date" name="dateBaptized" id="" />
            </div>

            <div class="form-group">
              <label for="">Department</label>
              <select name="department" required>
                <option value="youth">Youth</option>
                <option value="men">Men's</option>
                <option value="women">Women's</option>
              </select>
            </div>

            <div class="form-group">
              <label for="">Gender</label>
              <select name="gender" id="" required>
                <option value="male">Male</option>
                <option value="female">Female</option>
              </select>
            </div>

            <input type="submit" class="button" value="Add" />
          </form>
        </div>
      </div>
    </header>
    <script
      src="https://kit.fontawesome.com/a5afd461bf.js"
      crossorigin="anonymous"
    ></script>
    <script src="/js/modal.js"></script>
    <script src="/js/navigation.js"></script>
  </body>
</html>
